#!/bin/bash

apt-get $INSTALL_OPTIONS purge vim* grub* debconf-i18n installation-report >>$OUTPUT 2>&1
apt-get $INSTALL_OPTIONS autoremove

if [[ $DISTRIBUTION_TYPE != "ubuntu" || $PACKAGE_VARIANT != "cloud" ]]; then
    cd /tmp
    apt-get $INSTALL_OPTIONS update >>$OUTPUT 2>&1
    apt-get download acpi-support >>$OUTPUT 2>&1
    dpkg -x acpi-support*.deb /tmp/acpisupport >>$OUTPUT 2>&1
    if [ -L "/lib" ]; then
        mkdir -p /tmp/acpisupport/usr/lib
        (cd /tmp/acpisupport/lib && cp --parents -afr * /tmp/acpisupport/usr/lib)
        rm -rf /tmp/acpisupport/lib
    fi
    cd /tmp/acpisupport
    cp -aR * / >>$OUTPUT 2>&1
fi

if [ $LOCALE != "en_US" ]; then
    if ! grep -q LANG /etc/default/locale; then
        cat <<EOF >/etc/default/locale
#  File generated by update-locale
LANG="$LOCALE.UTF-8"

EOF
    fi
fi

if [ -f /etc/resolv.conf ]; then
    if [ ! -L /etc/resolv.conf ]; then
        cat <<EOF >/etc/resolv.conf
nameserver 1.1.1.1
nameserver 8.8.8.8

EOF
    fi
fi
